{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "build:example": "npm run --prefix ./example build",
    "build:plugins": "node scripts/build.plugin.js",
    "lint:fix": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --fix packages/*/src/**/*.js --cache",
    "lint:style": "stylelint --fix \"packages/*/src/**/*.scss\"",
    "prettier": "prettier -c --write \"**/*\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "script": {
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@vue/babel-preset-app": "^4.5.8",
    "@vue/babel-preset-jsx": "^1.2.4",
    "@vue/eslint-config-standard": "^5.1.2",
    "autoprefixer": "^9.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-component": "^1.1.1",
    "babel-plugin-import": "^1.13.1",
    "conventional-changelog-cli": "^2.1.1",
    "core-js": "^3.6.5",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-vue": "^4.0.0",
    "execa": "^5.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "node-sass": "^4.14.1",
    "postcss-url": "^9.0.0",
    "rollup": "^2.32.1",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-img": "^1.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^5.1.9",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.18.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-template-compiler": "^2.6.12",
    "yorkie": "^2.0.0"
  }
}
